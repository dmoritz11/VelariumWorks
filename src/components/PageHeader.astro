---
interface Props {
  title: string;
  description?: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<section class="relative py-32 mb-16">
  <div class="absolute inset-0 overflow-hidden -z-10">
    <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-secondary/90"></div>
    <img 
      src={image} 
      alt="" 
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>
  <div class="container mx-auto px-4 text-white relative">
    <h1 class="font-heading text-5xl md:text-6xl font-bold mb-6">{title}</h1>
    {description && <p class="text-xl md:text-2xl max-w-2xl">{description}</p>}
  </div>
</section>