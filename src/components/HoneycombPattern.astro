---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
const patternId = `honeycomb-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`absolute inset-0 overflow-hidden pointer-events-none ${className}`}>
  <svg
    class="absolute w-full h-full opacity-10"
    viewBox="0 0 1000 1000"
    xmlns="http://www.w3.org/2000/svg"
  >
    <defs>
      <pattern
        id={patternId}
        x="0"
        y="0"
        width="50"
        height="86.6"
        patternUnits="userSpaceOnUse"
        patternTransform="rotate(30)"
      >
        <path
          d="M25,0 L50,14.433756729740645 L50,43.30126918922194 L25,57.735025918962584 L0,43.30126918922194 L0,14.433756729740645 Z"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-opacity="0.3"
        />
        <path
          d="M25,57.735025918962584 L50,72.16878264870323 L50,101.03629510818452 L25,115.47005183814517 L0,101.03629510818452 L0,72.16878264870323 Z"
          fill="currentColor"
          fill-opacity="0.1"
        />
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill={`url(#${patternId})`} />
  </svg>
</div>