---
import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import HoneycombPattern from '../components/HoneycombPattern.astro';
import ServiceCard from '../components/ServiceCard.astro';

const services = [
  {
    title: "Media Production",
    description: "Professional photography, videography, and audio production services.",
    image: "/images/media-production.webp",
    link: "/services#media"
  },
  {
    title: "Event Management",
    description: "Comprehensive event planning and production services.",
    image: "/images/event-management.webp",
    link: "/services#events"
  },
  {
    title: "Content Management",
    description: "Strategic content planning and management solutions.",
    image: "/images/content-management.webp",
    link: "/services#content"
  }
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center">
    <HeroBackground />
    <HoneycombPattern className="text-white" />
    <div class="container mx-auto px-4 text-center text-white relative">
      <h1 class="font-heading text-5xl md:text-7xl font-bold mb-6">
        Innovate. Create. Deliver.
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
        Professional media production, event management, and content solutions for your business
      </p>
      <div class="flex justify-center gap-4">
        <a href="/contact" class="bg-accent hover:bg-accent/90 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          Get Started
        </a>
        <a href="/services" class="border-2 border-white hover:bg-white/10 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          Our Services
        </a>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="relative py-20">
    <HoneycombPattern className="text-primary" />
    <div class="container mx-auto px-4 relative">
      <h2 class="text-4xl font-heading font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map(service => (
          <ServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="relative bg-light py-20">
    <HoneycombPattern className="text-primary" />
    <div class="container mx-auto px-4 relative">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-heading font-bold mb-6">Woman & Veteran Owned</h2>
          <p class="text-lg mb-6">
            VelariumWorks LLC is proud to be a woman and veteran-owned business, bringing unique perspectives and exceptional service to every project.
          </p>
          <a href="/about" class="inline-block bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
            About Us
          </a>
        </div>
        <div class="relative">
          <img 
            src="/images/about-preview.webp" 
            alt="Professional video production setup"
            class="rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>