---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contact Us">
  <PageHeader 
    title="Contact Us" 
    description="Get in touch with us to discuss your project needs."
    image="/images/contact-header.webp"
  />

  <div class="container mx-auto px-4 mb-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-3xl font-heading font-bold mb-6">Get In Touch</h2>
        <p class="text-lg mb-8">Ready to start your next project? Contact us today and let's discuss how we can help you achieve your goals.</p>
        
        <div class="space-y-4 mb-8">
          <div>
            <h3 class="font-heading font-bold mb-2">Location</h3>
            <p>Manassas, VA</p>
          </div>
          <div>
            <h3 class="font-heading font-bold mb-2">Email</h3>
            <a href="mailto:dmoritz@velariumworks.com" class="text-accent hover:text-accent/80">dmoritz@velariumworks.com</a>
          </div>
          <div>
            <h3 class="font-heading font-bold mb-2">Phone</h3>
            <a href="tel:703-973-3936" class="text-accent hover:text-accent/80">703-973-3936</a>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-lg p-6">
        <ContactForm />
      </div>
    </div>
  </div>
</Layout>